<p id="searchHeader">Search</p>
<form action="/search/results" method="GET">
    <div id="searchBarDiv">
        <div class="searchBarDropdowns">
            <!-- Make Dropdown -->
            <select name="makeDropDown" id="makeDropDown" class="dropdown">
                <% if(searchBar.make != "undefined" ){ %>
                    <option selected="selected" class="defaultDropdownOption first-option"
                        value="<%= searchBar.make %>">
                        <%= searchBar.make %>
                    </option>

                    <% } else { %>
                        <option selected="selected" class="defaultDropdownOption first-option" value="make">Make
                        </option>
                        <% }%>
                            <% for(let make of allMakes) { %>
                                <option value="<%= make%>">
                                    <%= make %>
                                </option>
                                <% }%>
            </select>
            <!-- Model Dropdown -->

                <% if(searchBar.model !="undefined" ){ %>
                    <select name="modelDropDown" id="modelDropDown"  class="dropdown">
                    <option selected="selected" class="defaultDropdownOption" value="<%= searchBar.model %>">
                        <%= searchBar.model %>
                    </option>

                    <% } else { %>
                        <select name="modelDropDown" id="modelDropDown" disabled class="dropdown">
                        <option selected="selected" class="defaultDropdownOption modelOptions">Model</option>
                        <% }%>
            </select>
            <!-- Max Price Dropdown -->
            <select name="maxPriceDropDown" id="maxPriceDropDown" class="dropdown">
                <% if(searchBar.maxPrice !="undefined" ){ %>
                    <option selected="selected" class="defaultDropdownOption" value="<%= searchBar.maxPrice %>">
                        $<%= searchBar.maxPrice %>
                    </option>

                    <% } else { %>
                        <option selected="selected" class="defaultDropdownOption" value="0">Max Price</option>
                        <%}%>
                            <option value="1000">$1000</option>
                            <option value="2000">$2000</option>
                            <option value="3000">$3000</option>
                            <option value="4000">$4000</option>
                            <option value="5000">$5000</option>
                            <option value="7500">$7500</option>
                            <option value="10000">$10,000</option>
                            <option value="12500">$12,500</option>
                            <option value="15000">$15,000</option>
                            <option value="17500">$17,500</option>
                            <option value="20000">$20,000</option>
                            <option value="30000">$30,000</option>
                            <option value="40000">$40,000</option>
                            <option value="50000">$50,000</option>
                            <option value="75000">$75,000</option>
                            <option value="100000">$100,000</option>
                            <option value="200000">$200,000</option>
            </select>
            <!-- Max Kilometers Dropdown -->
            <select name="maxKmDropDown" id="maxKmDropDown" class="dropdown">
                <option selected="selected" class="defaultDropdownOption">(do not select)Mileage</option>
                <option value="1">1</option>
            </select>
            <!-- Location Dropdown -->
            <% if(searchBar.location !="undefined" ){ %>
                <input id="locationTextField" name="locationTextField" type="text" class="dropdown"
                    value="<%= searchBar.location %>">

                <% } else { %>
                    <input id="locationTextField" name="locationTextField" type="text" class="dropdown">
                    <% } %>
                        <input type="hidden" id="city2" name="city2" />
                        <input type="hidden" id="cityLat" name="cityLat" />
                        <input type="hidden" id="cityLng" name="cityLng" />
                        <!-- Radius Dropdown -->
                        <select name="radiusDropDown" id="radiusDropDown" class="dropdown">
                            <% if(searchBar.radius !="undefined" ){ %>
                                <option selected="selected" class="defaultDropdownOption"
                                    value="<%= searchBar.radius %>">
                                    <%= searchBar.radius %>
                                </option>

                                <% } else { %>
                                    <option selected="selected" class="defaultDropdownOption" value="0">Radius</option>
                                    <%}%>
                                        <option value="25">25 Km</option>
                                        <option value="50">50 Km</option>
                                        <option value="100">100 Km</option>
                                        <!-- <option value="250">250 Km</option>
                <option value="500">500 Km</option>
                <option value="1000">1000 Km</option>
                <option value="provincial">Provincial</option>
                <option value="national">National</option> -->
                        </select>
        </div>
        <div class="searchBarRadioBoxes">
            <!-- New/Used Select -->
            <div id="newUsedDiv" class="radio-selects">
                <div class="radio-option">
                    <% if(searchBar.newUsed == "all"){%>
                        <input type="radio" id="all" name="newUsedRadio" class="newUsedRadio" value="all" checked>
                    <% } else { %>
                        <input type="radio" id="all" name="newUsedRadio" class="newUsedRadio" value="all">
                    <% } %>    
                    <label for="all">All</label>
                </div>
                <div class="radio-option">
                    <% if(searchBar.newUsed == "new"){%>
                        <input type="radio" id="new" name="newUsedRadio" class="newUsedRadio" value="new" checked>
                    <% } else { %>
                        <input type="radio" id="new" name="newUsedRadio" class="newUsedRadio" value="new">
                    <% } %>    
                    <label for="new">New</label>
                </div>
                <div class="radio-option">
                    <% if(searchBar.newUsed == "used"){%>
                        <input type="radio" id="used" name="newUsedRadio" class="newUsedRadio" value="used" checked>
                    <% } else { %>
                        <input type="radio" id="used" name="newUsedRadio" class="newUsedRadio" value="used">
                    <% } %> 
                    <label for="used">Used</label>
                </div>
            </div>
            <!-- Seller Type -->
            <div id="sellerTypeDiv" class="radio-selects">
                <div class="radio-option">
                    <% if(searchBar.sellerType == "all"){%>
                        <input type="radio" id="all" name="sellerTypeRadio" class="sellerTypeRadio" value="all" checked>
                    <% } else { %>
                        <input type="radio" id="all" name="sellerTypeRadio" class="sellerTypeRadio" value="all">
                    <% } %>   
                    <label for="all">All</label>
                </div>
                <div class="radio-option">
                    <% if(searchBar.sellerType == "franchise"){%>
                        <input type="radio" id="franchise" name="sellerTypeRadio" class="sellerTypeRadio" value="franchise" checked>
                    <% } else { %>
                        <input type="radio" id="franchise" name="sellerTypeRadio" class="sellerTypeRadio" value="franchise">
                    <% } %>   
                    <label for="franchise">Dealership</label>
                </div>
                <div class="radio-option">
                    <% if(searchBar.sellerType == "independent"){%>
                        <input type="radio" id="independent" name="sellerTypeRadio" class="sellerTypeRadio" value="independent" checked>
                    <% } else { %>
                        <input type="radio" id="independent" name="sellerTypeRadio" class="sellerTypeRadio" value="independent">
                    <% } %>   
                    <label for="independent">Private Seller</label>
                </div>
                <div class="radio-option">
                    <% if(searchBar.sellerType == "auction"){%>
                        <input type="radio" id="auction" name="sellerTypeRadio" class="sellerTypeRadio" value="auction" checked>
                    <% } else { %>
                        <input type="radio" id="auction" name="sellerTypeRadio" class="sellerTypeRadio" value="auction">
                    <% } %>  
                    <label for="auction">Auction</label>
                </div>
            </div>
        </div>
        <button id="search-button"><i class="fas fa-search"></i> Search</button>
    </div>
</form>
